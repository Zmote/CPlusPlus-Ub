#ifndef WORD_H_
#define WORD_H_

#include <iosfwd>
#include <string>
#include <ostream>

class Word{
std::string word;
public:
	Word() = default;
	explicit Word(std::string c);
	void print(std::ostream& o);
	void read(std::istream& i);
	std::string toLower() const;
	bool operator<(Word const  &rhs) const {return toLower() < rhs.toLower(); }
};

std::ostream& operator<<(std::ostream& out,Word& word);
std::istream& operator>>(std::istream& in,Word& word);
inline bool operator>(Word const &lhs, Word const  &rhs);
inline bool operator==(Word const &lhs, Word const &rhs);
inline bool operator!=(Word const &lhs, Word const &rhs);
inline bool operator>=(Word const &lhs, Word const &rhs);
inline bool operator<=(Word const &lhs, Word const &rhs);


#endif /* WORD_H_ */
