#ifndef WORD_H_
#define WORD_H_

#include <iosfwd>
#include <string>
#include <ostream>

class Word{
std::string word;
public:
	Word() = default;
	explicit Word(std::string c);
	void print(std::ostream& o);
	void read(std::istream& i);
	const std::string toLower();
	inline bool operator<(Word const &lhs, Word const  &rhs) const { return word < rhs.word; }
	inline bool operator>(Word const &lhs, Word const  &rhs) const { return rhs < lhs; }
	inline bool operator==(Word const &lhs, Word const &rhs) const { return !(lhs < rhs || lhs > rhs ); }
	inline bool operator!=(Word const &lhs, Word const &rhs) const { return !(lhs == rhs); }
	inline bool operator>=(Word const &lhs, Word const &rhs) const { return !(lhs < rhs); }
	inline bool operator<=(Word const &lhs, Word const &rhs) const { return !(lhs > rhs); }
};

std::ostream& operator<<(std::ostream& out,Word& word);
std::istream& operator>>(std::istream& in,Word& word);


#endif /* WORD_H_ */
