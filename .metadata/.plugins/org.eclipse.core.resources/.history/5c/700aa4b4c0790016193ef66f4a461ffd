#include <stdio.h>
#define MAX_FUNCTIONS 10
int counter = 0;
void * ampeln[MAX_FUNCTIONS];

void printRed();
void printBlue();
void printGreen();
void addAmpel(void (*ptr)(void));
int main(){
	addAmpel(printRed);
	addAmpel(printBlue);
	addAmpel(printGreen);
	printAmpelns();

}

void addAmpel(void (*ptr)(void)){
	if(counter < MAX_FUNCTIONS){
		ampeln[counter] = ptr;
		counter++;
	}
}

void printRed(){
	printf("Die Ampel ist rot.\n");
}
void printBlue(){
	printf("Die Ampel ist blau.\n");
}
void printGreen(){
	printf("Die Ampel ist grün.\n");
}
