#ifndef __zChatterUI__
#define __zChatterUI__

/**
@file
Subclass of globalFrame, which is generated by wxFormBuilder.
*/

#include "chat_ui.h"

//// end generated include

/** Implementing globalFrame */
class zChatterUI : public globalFrame
{
	protected:
		// Handlers for globalFrame events.
	virtual void handle_connect( wxCommandEvent& event ) { event.Skip(); }
	virtual void handle_disconnect( wxCommandEvent& event );}
	virtual void handle_session_name_input( wxCommandEvent& event );
	virtual void handle_host_input( wxCommandEvent& event );
	virtual void handle_host_port_input( wxCommandEvent& event );
	virtual void handle_other_host_input( wxCommandEvent& event );
	virtual void handle_other_host_port( wxCommandEvent& event );
	virtual void handle_save_settings( wxCommandEvent& event );
	virtual void handle_chat_text_input( wxCommandEvent& event );
	public:
		/** Constructor */
		zChatterUI( wxWindow* parent );
	//// end generated class members
		void set_session_name(wxString name);
		wxString get_session_name();

		void set_session_host(wxString name);
		wxString get_session_host();

		void set_session_host_port(wxString name);
		wxString get_session_host_port();

		void set_session_other_host(wxString name);
		wxString get_session_other_host();

		void set_session_other_host_port(wxString name);
		wxString get_session_other_host_port();
	private:
		wxString user_session_name;
		wxString user_session_host;
		wxString user_session_host_port;
		wxString user_session_other_host;
		wxString user_session_other_host_post;
};

#endif // __zChatterUI__
