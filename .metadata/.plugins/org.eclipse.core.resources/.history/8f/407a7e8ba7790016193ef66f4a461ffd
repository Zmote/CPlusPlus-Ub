#include <stdio.h>

void printArr(int * arr);
int medianOfArr(int * arr);
int lengthOfArr(int * arr);
int main(){
	int zahlen[3] = {1,2,3};
	printArr(zahlen);
	printf("\n");
	printf("Median of arr is: %d", medianOfArr(zahlen);
}

void printArr(int * arr,int length){
	int * p = arr;
		while(p < &arr[length]){
			printf("%d ", *p );
			p++;
		}
}

int medianOfArr(int * arr, int length){
	int * p = arr;
	int sum = 0;
		while(p < &arr[length]){
			sum = sum + (*p);
			p++;
		}
	return sum/length;
}

int lengthOfArr(int * arr){
	return (sizeof(arr)/sizeof(arr[0]));
}


