#include <stdio.h>
#include <stdlib.h>

int main(void){
	printf("%s","Before struct output...\n");
	typedef struct{
		char * name;
		char * surname;
		int age;
		char * description;
	}Person;

	Person zafer;
	zafer.name = "Zafer";
	zafer.surname = "Dogan";
	zafer.age = 27;
	zafer.description = "He is an awesome dude";

	printf("%s\n%s\n%i\n%s\n", zafer.name, zafer.surname,zafer.age,zafer.description);
	printf("%s", "After struct output...\n");

	Person niyazi("Niyazi","Dogan", 22, "Not so awesome");

	return 0;
}
