#include <stdio.h>

void printBinary(int value);

int main(){
	printBinary(4);
	printBinary(2);
	printBinary(4781);
	return 0;
}

void printBinary(int value){
	int i;
	int resultat;
	int anz_bits = sizeof(value)*8;
	unsigned int mask = 1 << (anz_bits-1);
	printf("Value of %d in binary: ",value);
	for(i=0;i < anz_bits;i++){
		resultat = value & mask;
		if(resultat == 0){
			printf("%c",'0');
		}else{
			printf("%c",'1');
		}
		mask = mask >> 1;
	}
	printf("\n");
}
